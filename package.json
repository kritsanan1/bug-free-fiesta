{
  "name": "bug-free-fiesta",
  "version": "1.0.0",
  "private": true,
  "description": "Modern monorepo with Expo 54 mobile app, Next.js 16 web app, and shared packages",
  "workspaces": [
    "mobile",
    "web",
    "packages/*"
  ],
  "packageManager": "yarn@4.5.3",
  "scripts": {
    "dev": "concurrently --kill-others \"yarn workspace mobile dev\" \"yarn workspace web dev\"",
    "dev:mobile": "yarn workspace mobile dev",
    "dev:web": "yarn workspace web dev",
    "build": "yarn workspaces foreach -A run build",
    "build:mobile": "yarn workspace mobile build",
    "build:web": "yarn workspace web build",
    "lint": "yarn workspaces foreach -A run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "yarn workspaces foreach -A run type-check",
    "test": "yarn workspaces foreach -A run test",
    "clean": "yarn workspaces foreach -A run clean && rm -rf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  }
}
